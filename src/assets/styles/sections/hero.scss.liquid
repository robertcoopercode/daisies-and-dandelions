.hero {
  display: flex;
  height: 700px;
  background-size: cover;
  background-position: center;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.hero__title {
  font-family: $font-body;
  letter-spacing: 0.8px;
  text-transform: none;
  font-weight: 600;
  display: inline-block;
  height: 56px;
  line-height: 56px;
  font-size: 40px;
  padding: 0 40px;
  background-color: rgba(#000000, 0.5);
  color: #ffffff;
  margin-top: 0;
  margin-bottom: 60px;
}

.hero__subtitle {
  font-family: $font-body;
  font-weight: 400;
  display: inline-block;
  height: 56px;
  line-height: 56px;
  font-size: 34px;
  padding: 0 40px;
  background-color: rgba(#000000, 0.5);
  color: #ffffff;
  margin: 0;
}