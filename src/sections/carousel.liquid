<section class="carousel  container">
  <div class="glide">
    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides">
          {% for block in section.blocks %}
            <li class="glide__slide">{% include 'responsive-image' with
                    image: block.settings.image,
                    max_width: 480,
                    max_height: 480
                %}</li>
          {% endfor %}
      </ul>
      <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<">{% include 'icon-chevron' %}</button>
        <button class="glide__arrow glide__arrow--right" data-glide-dir=">">{% include 'icon-chevron' %}</button>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Carousel",
    "settings": [
      {
        "type":      "paragraph",
        "content":   "Make sure all images chosen for the carousel have the same dimensions. Use 960 x 640 images for best optimal results."
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Carousel",
        "category": "Image"
      }
    ]
  }
{% endschema %}
