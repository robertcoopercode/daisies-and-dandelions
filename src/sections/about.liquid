<div class="about  container">
    <div class="about__first-container">
        <div class="about__first-container-wrapper">
            {% include 'responsive-image' with
                image: section.settings.image,
                max_width: 480,
                max_height: 480 %}
            <div class="about__things">
                <p class="things__description">{{ section.settings.things_title }}</p>
                <ul class="things__list">
                    {% for block in section.blocks %}
                        <li class="things__list-item">{{ block.settings.text }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="about__second-container">
        <h1 class="about__title">{{ section.settings.title }}</h1>
        <div class="about__description  rte">
            {{ section.settings.text }}
        </div>
    </div>
</div>

{% schema %}
  {
    "name": "About page",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "textarea",
            "id": "text",
            "label": "Main text"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "things_title",
            "label": "Things title"
        }
    ],
    "blocks": [
      {
        "type": "thing",
        "name": "Thing",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Thing you like"
          }
        ]
      }
    ]
  }
{% endschema %}
