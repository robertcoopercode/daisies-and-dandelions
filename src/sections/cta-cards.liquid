<div class="cta-cards  container" data-section-id="{{ section.id }}">
    {% for block in section.blocks %}
      <div class="card">
        <img class="card__image" src="{{ block.settings.image | img_url: "800x", scale: 2 }}" />
        <div class="card__bottom">
          <h2 class="card__title">{{ block.settings.title }}</h2>
          <p class="card__description">{{ block.settings.description }}</p>
          <a class="card__button" href="/pages/{{ block.settings.button_link }}">{{ block.settings.button_text }}</a>
        </div>
      </div>
    {% endfor %}
</div>

<style>
  :root {
    --color-cta-background: {{ section.settings.background_color }};
    --color-cta-button-background: {{ section.settings.button_background_color }};
    --color-cta-button-background-hover: {{ section.settings.button_background_color_hover }};
    --color-cta-button-text: {{ section.settings.button_text_color }};
    --color-cta-button-text-hover: {{ section.settings.button_text_color_hover }};
  }
</style>

